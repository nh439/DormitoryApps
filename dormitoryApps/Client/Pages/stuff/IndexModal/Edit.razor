    public async void Open(string typename)
    {
        var raw = await _roomFurnHeaderServices.GetByType(typename);
        name = typename;
        headerattr1 = raw.Where(x => x.Header == RoomFurnHeaderAttr.Attr01).FirstOrDefault();
        headerattr2 = raw.Where(x => x.Header == RoomFurnHeaderAttr.Attr02).FirstOrDefault();
        headerattr3 = raw.Where(x => x.Header == RoomFurnHeaderAttr.Attr03).FirstOrDefault();
