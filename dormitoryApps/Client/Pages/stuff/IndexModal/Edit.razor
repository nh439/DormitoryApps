        headerattr5 = raw.Where(x => x.Header == RoomFurnHeaderAttr.Attr05).FirstOrDefault();
        headerattr6 = raw.Where(x => x.Header == RoomFurnHeaderAttr.Attr06).FirstOrDefault();

        if (headerattr1 == null)
        {
            headerattr1 = new RoomFurnHeader
                {
                    Header = RoomFurnHeaderAttr.Attr01,
                    ValueType = RoomFurnHeaderValuesType.TEXT,
                    CustomValue = false,
                    Description = string.Empty
                };
        }
        if (headerattr2 == null)
        {
            headerattr2 = new RoomFurnHeader
                {
                    Header = RoomFurnHeaderAttr.Attr02,
