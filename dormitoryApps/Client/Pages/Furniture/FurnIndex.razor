@page "/Furniture/{Id:int}"
@using dormitoryApps.Shared.Model.Entity;
@using dormitoryApps.Client.Services;
@using System.Timers;
@implements IDisposable;
@inject BuildingServices _buildingServices;
@inject RoomServices _roomServices;
@inject NavigationManager _navigationManager;
@inject RoomFurnServices _roomFurnServices;
@code {
    [Parameter]
    public int Id { get; set; }
    Room myroom = new Room();
    List<RoomFurn> roomFurns;
    Timer timer;
    protected override async void OnInitialized()
    {
        myroom = await _roomServices.GetRoom(Id);
        timer = new Timer(1000);
        timer.Elapsed += Tricking;
        timer.Enabled = true;
    }
    private async void Fetching()
    {
        roomFurns = await _roomFurnServices.GetByRoom(Id);
        if (roomFurns == null) roomFurns = new List<RoomFurn>();
    }
    private void Tricking(object sender,ElapsedEventArgs e)
    {
        Fetching();
        StateHasChanged();
    }
    void IDisposable.Dispose()
    {
        timer?.Dispose();
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
<center>
<h1>
   ห้อง @myroom.RoomName
</h1>
</center>
<br />
<br />
<br />
<button class="btn btn-primary" @onclick="()=>create.Open(Id)"><i class="ui plus icon"></i> เพิ่ม</button>
<br />
<br />
<table class="table table-bordered border-primary" style="text-align:center">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>ชื่อ</th>
            <th>ประเภทสิ่งของ</th>
            <th>รุ่น</th>
            <th>ราคา</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-primary">
        @if(roomFurns == null)
        {
            <tr>
                <td colspan="6">Fectching...</td>
            </tr>
        }
        else if(roomFurns.Count ==0)
        {
            <tr>
                <td colspan="6">ว่างเปล่า</td>
            </tr>
        }
        else
        {
            int count = 1;
            @foreach(var item in roomFurns)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Model</td>
                    <td>@item.Price.ToString("#,###") บาท</td>
                    <td>
                        <button class="btn btn-warning mx-1" data-toggle="tooltip" data-placement="bottom" title="แก้ไข" @onclick="()=>update.Open(item.Id)"><i class="edit outline icon"></i></button>
                        <button class="btn btn-danger mx-1" data-toggle="tooltip" data-placement="bottom" title="ลบ" @onclick="()=>delete.Open(item.Id)"><i class="trash alternate outline icon"></i></button>
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>
<dormitoryApps.Client.Pages.Furniture.Modal.Create @ref="create"/>
<dormitoryApps.Client.Pages.Furniture.Modal.Update @ref="update"/>
<dormitoryApps.Client.Pages.Furniture.Modal.Delete @ref="delete"/>

@code{
    private dormitoryApps.Client.Pages.Furniture.Modal.Create create;
    private dormitoryApps.Client.Pages.Furniture.Modal.Update update;
    private dormitoryApps.Client.Pages.Furniture.Modal.Delete delete;
}