    <ModalContent>
        <ModalHeader>
            ยกเลิกการประชุม <CloseButton></CloseButton>
        </ModalHeader>
        <ModalBody>
            <center>
                <h1>สรุปผลหลังประชุม</h1>
            </center>
            <div class="form-group">
                <label for="text">รหัส</label>
                <input id="text" @bind-value="item.Id" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="text1">ชื่อ</label>
                <input id="text1" @bind-value="item.Name" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="textarea">ข้อสรุป</label>
                <textarea id="textarea" @bind="item.Remark" cols="40" rows="5" class="form-control"></textarea>
            </div>
        </ModalBody>
        <ModalFooter>
            <Button Class="btn btn-outline-danger" @onclick="SaveChanges">ยืนยันการสรุปผล</Button>
            <Button Class="btn btn-outline-info" @onclick="()=>e.Hide()">ปิดหน้าต่างนี้</Button>
        </ModalFooter>
    </ModalContent>
</Modal>
