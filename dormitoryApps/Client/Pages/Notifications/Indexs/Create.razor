    <div>
        @foreach (var officerData in allOfficer.Select((x, y) => new { Data = x, Index = y }))
        {
            var officer = officerData.Data;
            var index = officerData.Index;
            var myposition = postitions.Where(x => x.Id == officer.Postition).FirstOrDefault();
            var myline = postitionLines.Where(x => x.Id == myposition?.Line).FirstOrDefault();
            var mydepartment = departments.Where(x => x.Id == myposition?.Department).FirstOrDefault();
            @if (sendTo[index] == null)
            { 
                sendTo[index] = new officerChecked(); 
            }
            sendTo[index].OfficerId = officer.Id;
            string officerLabel = $"{officer.Firstname} {officer.Surname} <{myposition.Name} - {myline.Name} - {mydepartment.Name}> " + (officer.Expired ? " <ลาออกแล้ว>" : "");
            <div class="custom-control custom-checkbox custom-control-inline">
                <input @bind-value="sendTo[index].Checked" id="@officer.Id" type="checkbox" class="custom-control-input" disabled="@(item.SendAll || officer.Expired)" />
