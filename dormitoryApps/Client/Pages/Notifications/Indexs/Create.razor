<h2>สร้างการแจ้งเตือน</h2>

@code {
    Officer currentUser = new Officer();
    Notification item = new Notification();
    RichTextEdit details;
    List<Officer> allOfficer = new List<Officer>();
    officerChecked[] sendTo = new officerChecked[0];
    List<Department> departments = new List<Department>();
    List<Postition> postitions = new List<Postition>();
    List<PostitionLine> postitionLines = new List<PostitionLine>();
    bool headerValidate = false;
    protected override async void OnInitialized()
    {
        currentUser = await _sessionServices.GetCurrentLogin();
        item = new Notification()
            {
                SenderId = currentUser.Id,
                SenderFrom = $"{currentUser.Firstname} {currentUser.Surname}"
            };
        allOfficer = await _officerServices.GetEmployee();
        sendTo = new officerChecked[allOfficer.Count];
        departments = await _departmentService.Getdepartments();
        postitionLines = await _postitionLineService.GetPostitionLines();
        postitions = await _postitionServices.GetPostitions();
        StateHasChanged();
    }
    async void SaveDetail()
    {
        item.Detail = await details.GetHtmlAsync();
    }
    async void FileChanged(InputFileChangeEventArgs e)
    {
        await Task.Delay(5);
        auto.Open("Uploading");
        await Task.Delay(5);
        try
        {
            item.Attachments = new List<NotificationAttachment>();
            var files = e.GetMultipleFiles(5);
            List<NotificationAttachment> attachments = new List<NotificationAttachment>();
            foreach (var file in files)
            {
                NotificationAttachment attachment = new NotificationAttachment()
                    {
                        FileCreateDate = file.LastModified.DateTime,
                        FileExtension = Path.GetExtension(file.Name),
                        FileName = Path.GetFileNameWithoutExtension(file.Name),
                        FileSize = file.Size,
                        FileType = file.ContentType
                    };
                var stream = file.OpenReadStream(200000000);
                MemoryStream memory = new MemoryStream();
                await stream.CopyToAsync(memory);
                attachment.FileContent = memory.ToArray();
                memory.Dispose();
                attachments.Add(attachment);
            }
            item.Attachments = attachments;
            auto.Success("Upload Completed");
            await Task.Delay(10);
            StateHasChanged();
        }
        catch (Exception x)
        {
            auto.Failed(x.Message);
            await Task.Delay(5);
        }
        StateHasChanged();
    }
    void ClearAttachment()
    {
        item.Attachments = new List<NotificationAttachment>();
        StateHasChanged();
    }
    void ClearAttachment(string attachmentId)
    {
        item.Attachments = item.Attachments.Where(x => x.Id != attachmentId).ToList();
        StateHasChanged();
    }
    async void FilterChanges(ChangeEventArgs e)
    {
        switch (e.Value.ToString())
        {
            case "1":
                allOfficer = await _officerServices.GetEmployee(); break;
            case "2":
                var mydepartment = departments.Where(x => x.Id == postitions.Where(y => y.Id == currentUser.Postition).FirstOrDefault().Department).FirstOrDefault();
                allOfficer = await _officerServices.GetEmployee();
                var officerPostition = (from all in allOfficer
                                        join pos in postitions on all.Postition equals pos.Id
                                        select new { Officer = all, Position = pos }).Where(x => x.Position.Department == mydepartment?.Id).Select(x => x.Officer).ToList();
                allOfficer = officerPostition;
                break;
            case "3":
                var mylines = postitionLines.Where(x => x.Id == postitions.Where(y => y.Id == currentUser.Postition).FirstOrDefault().Line).FirstOrDefault();
                allOfficer = await _officerServices.GetEmployee();
                var officerLines = (from all in allOfficer
                                    join pos in postitions on all.Postition equals pos.Id
                                    select new { Officer = all, Position = pos }).Where(x => x.Position.Line == mylines.Id).Select(x => x.Officer).ToList();
                allOfficer = officerLines;
                break;
            case "4":
                allOfficer = await _officerServices.GetEmployee();
                allOfficer = allOfficer.Where(x => !x.Expired).ToList();
                break;
            default:
                allOfficer = await _officerServices.GetEmployee(); break;

        }
        StateHasChanged();
    }
    async void SaveChanges()
    {
        auto.Open("Sending..");
        try
        {
            headerValidate = string.IsNullOrEmpty(item.Header);
            if (headerValidate) return;
            if (!item.SendAll)
            {
                List<NotificationAttendee> attendees = new List<NotificationAttendee>();
                var sendTochecked = sendTo.Where(x => x.Checked).ToList();
                foreach (var i in sendTochecked)
                {
                    attendees.Add(new NotificationAttendee
                        {
                            NotificationId = item.Id,
                            UserId = i.OfficerId
                        });
                }
                item.Attendees = attendees;

            }
            item.Date = DateTime.Now;
            var result = await _notificationServices.Create(item);
            if (result)
            {
                auto.Success("Send Complete");
                await Task.Delay(5);
                item = new Notification()
                    {
                        SenderId = currentUser.Id,
                        SenderFrom = $"{currentUser.Firstname} {currentUser.Surname}",
                        Attendees = new List<NotificationAttendee>(),
                        Attachments = new List<NotificationAttachment>()
                    };
                StateHasChanged();
                return;
            }
            auto.Failed("Send Incomplete");

        }
        catch (Exception x)
        {
            auto.Failed(x.Message);
        }

    }
    class officerChecked
    {
        public long OfficerId { get; set; }
        public bool Checked { get; set; }
    }
}
